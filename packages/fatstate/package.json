{
  "name": "fatstate",
  "version": "1.1.3",
  "description": "A Fat Node implementation for pure state. Easy time travel through your state. ",
  "main": "dist/index.js",
  "ts:main": "src/index.ts",
  "typings": "src/index.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "start": "node fuse.js",
    "test": "node_modules/.bin/jest",
    "dist": "node fuse.js dist",
    "clean": "node fuse.js clean",
    "precommit": "lint-staged",
    "typecheck": "node_modules/.bin/tsc -p ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "author": {
    "name": "Hugo Daniel Henriques Oliveira Gomes",
    "email": "mail@hugodaniel.pt"
  },
  "license": "SEE LICENSE IN FILE LICENSE.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HugoDaniel/fatstate.git"
  },
  "keywords": [
    "state",
    "management",
    "time-travel",
    "travel",
    "time",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/HugoDaniel/fatstate/issues"
  },
  "homepage": "https://github.com/HugoDaniel/fatstate#readme",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "fuse-box": "^3.7.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "prettier-tslint": "^0.4.2",
    "rimraf": "^2.6.3",
    "terser": "^3.17.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.4.5",
    "uglify-js": "^3.5.6"
  }
}
