{
  "name": "gridgenerator-build",
  "private": true,
  "workspaces": [
    "packages/fatstate",
    "packages/slim-runner",
    "packages/gridgenerator-data",
    "packages/gridgenerator-engine",
    "packages/gridgenerator-dom",
    "packages/gridgenerator-main"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "typecheck": "node_modules/.bin/tsc -p ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "prettier-tslint": "^0.4.2",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.4.5"
  }
}
