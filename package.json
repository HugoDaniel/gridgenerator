{
  "name": "gridgenerator-build",
  "private": true,
  "workspaces": [
    "packages/fatstate",
    "packages/slim-runner",
    "packages/gridgenerator-data",
    "packages/gridgenerator-engine",
    "packages/gridgenerator-dom",
    "packages/haag",
    "packages/meander",
    "packages/gridgenerator-main"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "typecheck": "node_modules/.bin/tsc -p ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "fuse-box": "4.0.0-alpha.37",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "prettier-tslint": "^0.4.2",
    "rimraf": "^2.6.3",
    "terser": "^3.17.0",
    "ts-node": "^8.2.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.7.1",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.4.5",
    "uglify-js": "^3.5.13"
  }
}
